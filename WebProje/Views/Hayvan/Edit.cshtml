@model WebProje.Models.Hayvanlar

@{
    ViewData["Title"] = "Edit";
}
<style>
    #form {
        width: 70%;
        padding: 20px 40px 20px 40px;
        background-color: white;
        opacity: 0.7;
        position: relative;
        left: 30%;
        color: black;
        margin-bottom: 50px;
        border-radius:10px;
    }
</style>
<hr />
<div class="row">
    <div class="col-md-4" id="form">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="HayvanAdi" class="control-label"></label>
                <input asp-for="HayvanAdi" class="form-control" />
                <span asp-validation-for="HayvanAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tur" class="control-label"></label>
                <input asp-for="Tur" class="form-control" />
                <span asp-validation-for="Tur" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Sahiplenildimi" /> @Html.DisplayNameFor(model => model.Sahiplenildimi)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
