@{
    ViewData["Title"] = "Home Page";
}
@inject LanguageService language
<html>
<head>
    <style>
        
        .paragraf {
            color: white;
            position: absolute;
            top: 30%;
            left:30%;
            text-align: center;
        }
        .paragraf h1{
            font-size:70px;
            margin-top:80px;
        }
        .paragraf p {
            margin-top: 20px auto;
            font-weight:100;
            line-height:25px;
        }
        .btn{
            width:250px;
            max-height:100px;
            padding:15px 0;
            text-align:center;
            border-radius:25px;
            font-weight:bold;
            border:2px solid white;
            color:white;
        }
        .btn:hover{
            color:antiquewhite;
        }
        a{
            border:none;
            color:white;
        }
    </style>
</head>
<body>
    <div class="paragraf">
        <h1>@language.GetKey("Hayvanları koruyalım")</h1>
        <p>Tek soyu tükenen hayvanlar değil,biz de hayvan sevgisi olmadan tükeniyoruz.<br />
        Bu zamanın kıymetini bilin.Hayvanları koruyun.</p>
        <button type="button" class="btn" ><a asp-controller="Home" asp-action="Hayvanlar"> Şimdi Sahiplen</a></button>
    </div>
</body>
</html>